{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "target": "ES2020",
  "lib": ["ES2020", "DOM", "DOM.Iterable"],
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "packages/**/*.ts",
  ],
  "exclude": [
    "src/**/__tests__/*",
    "packages/**/__tests__/*",
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lib/*": [
        "./packages/lib/*"
      ]
    }
  }
}
